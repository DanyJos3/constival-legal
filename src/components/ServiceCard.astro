---
/**
 * ServiceCard - Matching sas-facil-front style exactly
 */
interface Props {
  title: string;
  description: string;
  icon: string;
  variant?: 'dark' | 'medium' | 'light';
}

const { title, description, icon, variant = 'dark' } = Astro.props;

// Icon paths mapping
const iconPaths: Record<string, string> = {
  'building-2': 'M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18zm-4 0h16m-10-4v4m4-4v4m-4-8h.01M10 10h.01M10 6h.01M14 14h.01M14 10h.01M14 6h.01',
  'badge-check': 'M22 12a10 10 0 0 0-20 0 10 10 0 0 0 20 0zM9 12l2 2 4-4',
  'scale': 'M16 3h5v5M8 3H3v5m13 13h5v-5M3 16v5h5M21 3l-7 7m-4 4l-7 7',
  'file-pen': 'M12 20h9M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z',
  'arrow-left-right': 'M21 7H3m18 0l-4-4m4 4l-4 4M3 17h18M3 17l4-4m-4 4l4 4',
  'circle-x': 'M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20zm3.5 6.5l-7 7m0-7l7 7',
  'shield-check': 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10zm-2-7l2 2 4-4',
  'users': 'M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2m14-10a4 4 0 1 0-8 0 4 4 0 0 0 8 0zm6 10v-2a4 4 0 0 0-3-3.87m-3-12a4 4 0 0 1 0 7.75',
};

// Variant styles (matching sas-facil-front cardVariants)
const variants = {
  dark: {
    bg: 'bg-primary-dark/80',
    border: 'border-white/20',
    iconBg: 'bg-accent/30',
    iconColor: 'text-accent',
    title: 'text-white',
    description: 'text-white/70',
    hover: 'hover:bg-primary-dark/90'
  },
  medium: {
    bg: 'bg-primary-medium/80',
    border: 'border-white/20',
    iconBg: 'bg-accent/30',
    iconColor: 'text-accent',
    title: 'text-white',
    description: 'text-white/70',
    hover: 'hover:bg-primary-medium/90'
  },
  light: {
    bg: 'bg-white/90',
    border: 'border-border-default',
    iconBg: 'bg-accent/20',
    iconColor: 'text-accent',
    title: 'text-primary-dark',
    description: 'text-text-muted',
    hover: 'hover:bg-white'
  }
};

const v = variants[variant];
const iconPath = iconPaths[icon] || iconPaths['building-2'];
---

<div 
  class:list={[
    "shrink-0 w-40 h-56 lg:w-56 lg:h-56 p-4 lg:p-6 rounded-xl lg:rounded-2xl",
    "backdrop-blur-sm transition-all duration-300 cursor-pointer group flex flex-col border",
    v.bg, v.border, v.hover
  ]}
>
  <!-- Icon -->
  <div class:list={[
    "w-10 h-10 lg:w-14 lg:h-14 rounded-lg lg:rounded-xl flex items-center justify-center mb-3 transition-colors",
    v.iconBg
  ]}>
    <svg 
      class:list={["size-5 lg:size-7", v.iconColor]}
      fill="none" 
      stroke="currentColor" 
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      viewBox="0 0 24 24"
    >
      <path d={iconPath} />
    </svg>
  </div>
  
  <!-- Title -->
  <h3 class:list={["text-sm lg:text-base font-semibold mb-1", v.title]}>
    {title}
  </h3>
  
  <!-- Description -->
  <p class:list={["text-xs lg:text-sm leading-relaxed flex-1", v.description]}>
    {description}
  </p>
</div>
