---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../sections/Header.astro';
import Hero from '../sections/Hero.astro';
import Pricing from '../sections/Pricing.astro';
import Process from '../sections/Process.astro';
import Requirements from '../sections/Requirements.astro';
import FAQ from '../sections/FAQ.astro';
import Footer from '../sections/Footer.astro';

const title = "Crear SAS en Ecuador - Constitución en 3-5 días";
const description = "Constituye tu Sociedad por Acciones Simplificada (SAS) en Ecuador. Proceso 100% digital en 3-5 días hábiles. Desde $149 + IVA. Sin notarías, sin filas.";
---

<BaseLayout 
  title={title}
  description={description}
  canonical="https://constival.com/crear-sas-ecuador"
>
  <Header />
  
  <main>
    <!-- HERO - Fondo oscuro con gradiente -->
    <Hero 
      title="Crea tu SAS en Ecuador en 3-5 días"
      subtitle="La estructura societaria más flexible del país. Sin capital mínimo, sin notarías, 100% digital. Desde $149 + IVA."
    />
    
    <!-- PRECIOS - Fondo oscuro base -->
    <Pricing />
    
    <!-- PROCESO - Fondo verde medio (contraste) -->
    <Process />
    
    <!-- REQUISITOS - Fondo gris claro (fuerte contraste) -->
    <Requirements />
    
    <!-- FAQ - Fondo oscuro -->
    <FAQ />
    
    <!-- CTA FINAL - Fondo verde medio con gradiente -->
    <section class="section bg-primary-medium relative overflow-hidden">
      <!-- Background decorations -->
      <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-accent/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-80 h-80 bg-accent/5 rounded-full blur-2xl translate-y-1/2 -translate-x-1/2"></div>
      
      <div class="container relative">
        <div class="max-w-3xl mx-auto text-center">
          <span class="inline-block px-4 py-1.5 rounded-full bg-accent/20 text-accent text-sm font-medium mb-6">
            Comienza Hoy
          </span>
          
          <h2 class="text-3xl sm:text-4xl font-semibold text-white mb-4">
            ¿Listo para formalizar tu negocio?
          </h2>
          <p class="text-white/70 text-lg mb-10 max-w-xl mx-auto">
            Da el primer paso hacia la profesionalización de tu empresa. 
            Nuestro equipo te guía en cada etapa del proceso.
          </p>
          
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a 
              href="https://wa.me/593XXXXXXXXX?text=Hola,%20quiero%20constituir%20mi%20SAS%20en%20Ecuador"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary btn-lg btn-pill btn-glow btn-icon-left w-full sm:w-auto"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Iniciar mi SAS ahora
            </a>
            
            <a 
              href="#precios" 
              class="btn btn-secondary btn-lg btn-pill w-full sm:w-auto"
            >
              Ver planes y precios
            </a>
          </div>
          
          <!-- Trust Badges -->
          <div class="mt-10 flex flex-wrap items-center justify-center gap-x-6 gap-y-2 text-sm text-white/50">
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              Respuesta en menos de 2 horas
            </span>
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              Asesoría inicial gratuita
            </span>
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              Garantía de satisfacción
            </span>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

