---
/**
 * HeroHome - Hero principal con slider de servicios
 * Solo para la página de inicio (index.astro)
 * Estilos basados en sas-facil-front
 */
import { Image } from 'astro:assets';
import InfiniteSlider from '../components/InfiniteSlider.astro';
import ServiceCard from '../components/ServiceCard.astro';
import heroBg from '../assets/hero-bg.png';
import { ctaButton } from '../data/services';

// Servicios para el slider
const services = [
  {
    icon: 'building-2',
    title: 'Constituciones de empresas (SAS)',
    description: 'Nos encargamos de todo el proceso legal para que tu empresa quede constituida correctamente.',
    variant: 'dark' as const
  },
  {
    icon: 'badge-check',
    title: 'Registro de Marca',
    description: 'Protege tu identidad comercial ante el SENADI.',
    variant: 'medium' as const
  },
  {
    icon: 'scale',
    title: 'Asesoría Legal Especializada',
    description: 'Te acompañamos en todo el proceso para evitar errores legales y retrasos.',
    variant: 'light' as const
  },
  {
    icon: 'file-pen',
    title: 'Reforma de estatutos',
    description: 'Documentos personalizados para tu empresa.',
    variant: 'dark' as const
  },
  {
    icon: 'arrow-left-right',
    title: 'Transferencia de acciones',
    description: 'Asesoría y gestión legal para la correcta cesión o venta de acciones.',
    variant: 'medium' as const
  },
  {
    icon: 'circle-x',
    title: 'Disolución de empresas',
    description: 'Acompañamiento legal para cerrar tu empresa de forma ordenada.',
    variant: 'light' as const
  },
];

// Beneficios mostrados bajo el CTA
const benefits = [
  'Proceso digital',
  'Gestión sin intervención notarial',
  'Asesoría legal especializada'
];
---

<section class="min-h-screen flex items-center overflow-hidden relative" id="hero">
  <!-- Background Image (optimized by Astro) -->
  <div class="absolute inset-0 -z-20">
    <Image 
      src={heroBg}
      alt=""
      class="w-full h-full object-cover object-left lg:object-center"
      loading="eager"
      quality={85}
      widths={[640, 1024, 1536, 1920]}
      sizes="100vw"
    />
  </div>
  
  <!-- Gradient Overlay (matching sas-facil-front) -->
  <div class="absolute inset-0 bg-linear-to-b from-primary-dark/90 to-primary-medium/70 -z-10"></div>
  
  <!-- Decorative Glow -->
  <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-pulse pointer-events-none"></div>

  <div class="relative mx-auto w-full max-w-7xl px-6 py-20">
    <!-- Grid Layout: 1 col mobile, 2 cols desktop -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      
      <!-- Left Side - Content -->
      <div class="relative z-10 text-center lg:text-left">
        
