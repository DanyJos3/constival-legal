---
import { sasConstitutionSteps } from '../data/services';
---

<!-- FONDO VERDE MEDIO - Contraste con secciones adyacentes -->
<section class="section bg-primary-medium" id="proceso">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <span class="inline-block px-4 py-1.5 rounded-full bg-accent/20 text-accent text-sm font-medium mb-4">
        Proceso Simple
      </span>
      <h2 class="text-3xl sm:text-4xl font-semibold text-white mb-4">
        8 pasos para tu SAS lista
      </h2>
      <p class="text-white/70 text-lg">
        Nosotros nos encargamos de todo. Tú solo firmas y recibes tu empresa constituida.
      </p>
    </div>

    <!-- Process Steps -->
    <div class="relative max-w-4xl mx-auto">
      <!-- Connection Line (Desktop) -->
      <div class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-accent/50 via-accent/20 to-transparent -translate-x-1/2"></div>

      <div class="space-y-8 lg:space-y-0">
        {sasConstitutionSteps.map((step, index) => (
          <div 
            class={`
              relative flex flex-col lg:flex-row items-start lg:items-center gap-6 animate-fade-in
              ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'}
            `}
            style={`animation-delay: ${index * 100}ms`}
          >
            {/* Content Card */}
            <div class={`
              flex-1 p-6 lg:p-8 rounded-xl bg-primary-dark/50 border border-white/10 backdrop-blur-sm
              ${index % 2 === 0 ? 'lg:text-right' : 'lg:text-left'}
            `}>
              <span class="inline-block text-xs font-semibold text-accent uppercase tracking-wider mb-2">
                Paso {step.number}
              </span>
              <h3 class="text-xl font-semibold text-white mb-2">
                {step.title}
              </h3>
              <p class="text-white/60 text-sm leading-relaxed">
                {step.description}
              </p>
            </div>

            {/* Step Number Circle */}
            <div class="
              relative z-10 flex-shrink-0 w-14 h-14 rounded-full 
              bg-primary-dark border-2 border-accent 
              flex items-center justify-center
              shadow-[0_0_20px_-5px_hsl(175_77%_45%/0.4)]
              order-first lg:order-none
            ">
              <span class="text-lg font-bold text-accent">{step.number}</span>
            </div>

            {/* Spacer for alignment */}
            <div class="hidden lg:block flex-1"></div>
          </div>
        ))}
      </div>
    </div>

    <!-- Timeline End -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-3 px-6 py-4 rounded-2xl bg-accent/10 border border-accent/30">
        <div class="w-10 h-10 rounded-full bg-accent flex items-center justify-center">
          <svg class="w-5 h-5 text-primary-dark" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div class="text-left">
          <p class="text-white font-semibold">¡Tu SAS está lista!</p>
          <p class="text-sm text-white/60">Recibes tu escritura, nombramientos y RUC</p>
        </div>
      </div>
    </div>
  </div>
</section>
