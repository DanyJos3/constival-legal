---
import { sasRequirements } from '../data/services';

// Map icon names to SVG paths
const iconPaths: Record<string, string> = {
  'key-round': 'M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4',
  'id-card': 'M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2zm5 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm-4 4h8a2 2 0 0 0-4-3 2 2 0 0 0-4 3zm10-6h4m-4 4h4',
  'mail': 'M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm16 2l-8 5-8-5',
  'file-text': 'M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8zm2 18H6V4h7v5h5zM8 13h8m-8 4h8m-8-8h2',
  'building-2': 'M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18zm-4 0h16m-10-4v4m4-4v4m-4-8h.01M10 10h.01M10 6h.01M14 14h.01M14 10h.01M14 6h.01',
  'briefcase': 'M20 7h-4V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v2H4a2 2 0 0 0-2 2v11a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM10 5h4v2h-4z',
};
---

<!-- FONDO CLARO GRIS - Contraste con Process -->
<section class="section-gray" id="requisitos">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <span class="badge-accent">
        Checklist de Documentos
      </span>
      <h2 class="title-dark">
        ¿Qué necesitas para empezar?
      </h2>
      <p class="subtitle-dark">
        Reúne estos documentos y estarás listo para constituir tu SAS en tiempo récord.
      </p>
    </div>

    <!-- Requirements Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {sasRequirements.map((req, index) => (
        <div 
          class="group card-white p-6 flex gap-4 animate-fade-in"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Checkbox Icon -->
          <div class="flex-shrink-0">
            <div class="icon-container">
              <svg 
                class="w-6 h-6 text-accent"
                fill="none" 
                stroke="currentColor" 
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                viewBox="0 0 24 24"
              >
                <path d={iconPaths[req.icon] || iconPaths['file-text']} />
              </svg>
            </div>
          </div>

          <!-- Content -->
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-2">
              <h3 class="card-title-sm">
                {req.title}
              </h3>
              {req.required && (
                <span class="badge-required">
                  Requerido
                </span>
              )}
            </div>
            <p class="card-description-sm">
              {req.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Help CTA -->
    <div class="mt-12 text-center">
      <div class="inline-flex flex-col sm:flex-row items-center gap-4 p-6 rounded-2xl bg-primary-dark border border-white/10">
        <div class="text-left">
          <p class="text-white font-medium mb-1">
            ¿No tienes firma electrónica?
          </p>
          <p class="text-white/60 text-sm">
            Te ayudamos a obtenerla. Es rápido y puedes hacerlo desde casa.
          </p>
        </div>
        <a 
          href="https://wa.me/593XXXXXXXXX?text=Hola,%20necesito%20ayuda%20para%20obtener%20mi%20firma%20electrónica"
          target="_blank"
          rel="noopener noreferrer"
          class="cta-button inline-flex items-center justify-center gap-2 px-6 py-3 bg-accent font-medium rounded-lg hover:bg-accent-light transition-all duration-200 text-sm whitespace-nowrap"
        >
          Solicitar Ayuda
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .section-gray {
    padding-top: var(--spacing-section);
    padding-bottom: var(--spacing-section);
    background-color: #f3f4f6; /* gray-100 */
  }
  
  .badge-accent {
    display: inline-block;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    background-color: hsl(175 77% 45%);
    color: hsl(180 30% 8%);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }
  
  .badge-required {
    padding: 0.125rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    background-color: hsl(175 77% 45%);
    color: hsl(180 30% 8%);
    border-radius: 0.25rem;
  }
  
  .title-dark {
    font-size: clamp(1.875rem, 1.5rem + 1.875vw, 2.5rem);
    font-weight: 600;
    color: #111827 !important; /* gray-900 forzado */
    margin-bottom: 1rem;
  }
  
  .subtitle-dark {
    font-size: 1.125rem;
    color: #4b5563 !important; /* gray-600 forzado */
    line-height: 1.625;
  }
  
  .card-white {
    background-color: #ffffff;
    border: 1px solid #e5e7eb; /* gray-200 */
    border-radius: 1rem;
    box-shadow: 0 2px 10px -3px rgba(0, 0, 0, 0.05);
    transition: all 0.2s ease;
  }
  
  .card-white:hover {
    border-color: hsl(175 77% 45%);
    box-shadow: 0 4px 20px -5px rgba(20, 184, 166, 0.15);
  }
  
  .icon-container {
    width: 3rem;
    height: 3rem;
    border-radius: 0.75rem;
    background-color: rgba(20, 184, 166, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s;
  }
  
  .card-white:hover .icon-container {
    background-color: rgba(20, 184, 166, 0.25);
  }
  
  .card-title-sm {
    font-size: 1.125rem;
    font-weight: 600;
    color: #111827 !important; /* gray-900 forzado */
  }
  
  .card-description-sm {
    font-size: 0.875rem;
    color: #4b5563 !important; /* gray-600 forzado */
    line-height: 1.625;
  }
  
  .cta-button {
    color: hsl(180 30% 8%) !important;
  }
</style>
