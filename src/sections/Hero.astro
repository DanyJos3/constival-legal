---
/**
 * Hero - Hero simple centrado
 * Para páginas de servicio como crear-sas-ecuador
 */
interface Props {
  title?: string;
  subtitle?: string;
  showCTA?: boolean;
}

const {
  title = "La base legal de las empresas que transforman el Ecuador",
  subtitle = "Constituye tu SAS en 3-5 días, 100% en línea. Sin notarías, sin filas, sin complicaciones.",
  showCTA = true
} = Astro.props;
---

<section class="relative min-h-screen flex items-center pt-20 overflow-hidden" id="hero">
  <!-- Background Elements -->
  <div class="absolute inset-0 -z-10">
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-linear-to-b from-primary-dark via-primary-dark to-primary-medium"></div>
    
    <!-- Decorative Grid -->
    <!-- <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(var(--color-accent) 1px, transparent 1px), linear-gradient(90deg, var(--color-accent) 1px, transparent 1px); background-size: 60px 60px;"></div> -->
    
    <!-- Glow Effects -->
    <!-- <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] bg-accent/5 rounded-full blur-[120px] -translate-x-1/2 -translate-y-1/2"></div> -->
    <!-- <div class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] bg-accent/8 rounded-full blur-[100px] translate-x-1/2 translate-y-1/2"></div> -->
  </div>
  
  <div class="container relative">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent/10 border border-accent/20 mb-8 animate-fade-in">
        <span class="w-2 h-2 rounded-full bg-accent animate-pulse"></span>
        <span class="text-sm font-medium text-accent">Proceso 100% digital</span>
      </div>
      
      <!-- Main Title -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 text-balance animate-fade-in-up leading-tight">
        {title}
      </h1>
      
      <!-- Subtitle -->
      <p class="text-lg sm:text-xl text-white/70 max-w-2xl mx-auto mb-10 animate-fade-in-up delay-100">
        {subtitle}
      </p>
      
      <!-- CTA Buttons -->
      {showCTA && (
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up delay-200">
          <a 
            href="#precios" 
            class="cta-button inline-flex items-center justify-center gap-2 px-8 py-4 bg-accent font-semibold rounded-full hover:bg-accent-light transition-all duration-200 w-full sm:w-auto"
          >
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Ver Precios
          </a>
          
          <a 
            href="https://wa.me/593XXXXXXXXX?text=Hola,%20quiero%20información%20sobre%20constituir%20una%20SAS" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-transparent text-white font-medium rounded-full border border-white/20 hover:bg-white/10 hover:border-accent transition-all duration-200 w-full sm:w-auto group"
          >
            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Hablar con Abogado
          </a>
        </div>
      )}
      
      <!-- Trust Indicators -->
      <div class="mt-16 pt-16 border-t border-white/10 animate-fade-in delay-300">
        <p class="text-sm text-white/40 mb-6">Empresas confían en nosotros</p>
        <div class="flex flex-wrap items-center justify-center gap-8">
          <div class="flex items-center gap-2">
            <span class="text-3xl font-bold text-white">+50</span>
            <span class="text-white/50">SAS constituidas</span>
          </div>
          <div class="w-px h-8 bg-white/10 hidden sm:block"></div>
          <div class="flex items-center gap-2">
            <span class="text-3xl font-bold text-white">3-5</span>
            <span class="text-white/50">días hábiles</span>
          </div>
          <div class="w-px h-8 bg-white/10 hidden sm:block"></div>
          <div class="flex items-center gap-2">
            <span class="text-3xl font-bold text-white">100%</span>
            <span class="text-white/50">digital</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <a href="#precios" class="flex flex-col items-center gap-2 text-white/40 hover:text-accent transition-colors">
      <span class="text-xs font-medium">Explorar</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
     
  </div>
</section>

<style>
  /* CTA Button con color de texto forzado */
  .cta-button {
    color: var(--color-text-inverse) !important;
  }
</style>
