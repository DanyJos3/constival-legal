---
import { Sparkles, Star } from 'lucide-react';
import { allServices } from '../data/services';

// Icon paths for each service
const iconPaths: Record<string, string> = {
  'building-2': 'M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18zm-4 0h16m-10-4v4m4-4v4m-4-8h.01M10 10h.01M10 6h.01M14 14h.01M14 10h.01M14 6h.01',
  'file-edit': 'M12 20h9M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z',
  'user-check': 'M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2m11-10a4 4 0 1 0-8 0 4 4 0 0 0 8 0zm6 1l2 2 4-4',
  'arrow-right-left': 'M21 7H3m18 0l-4-4m4 4l-4 4M3 17h18M3 17l4-4m-4 4l4 4',
};
---

<!-- FONDO BLANCO - Contraste con el Hero oscuro -->
<section class="section-light" id="servicios">
  <div class="container">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <span class="badge-accent">
        Nuestros Servicios
      </span>
      <h2 class="title-dark">
        Soluciones legales para tu empresa
      </h2>
      <p class="subtitle-dark">
        Desde la constituci칩n hasta las reformas, te acompa침amos en cada etapa de tu empresa.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {allServices.map((service, index) => (
        <a 
          href={`/${service.slug}`}
          class="group card-light p-8 flex flex-col animate-fade-in hover:scale-[1.02] transition-all duration-300"
          style={`animation-delay: ${index * 100}ms`}
        >

           {/* Popular Badge */}
          {service.recomended  && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <div class="badge-popular">
                <Star className="w-3 h-3" />
                Servicio m치s solicitado
              </div>
            </div>
          )}

          <!-- Icon -->
          <div class="icon-container">
            <svg 
              class="w-7 h-7 text-accent"
              fill="none" 
              stroke="currentColor" 
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              viewBox="0 0 24 24"
            >
              <path d={iconPaths[service.icon] || iconPaths['building-2']} />
            </svg>
              
          </div>
       

          <!-- Content -->
          <h3 class="card-title">
            {service.title}
          </h3>
          <p class="card-description">
            {service.shortDescription}
          </p>

          <!-- CTA -->
          <div class="flex items-center gap-2 text-accent-dark group-hover:text-accent-dark transition-colors">
            <span class="text-sm font-medium">Conocer m치s</span>
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .section-light {
    padding-top: var(--spacing-section);
    padding-bottom: var(--spacing-section);
    background-color: var(--color-surface-light);
  }
  
  .badge-accent {
    display: inline-block;
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    background-color: var(--color-accent);
    color: var(--color-text-inverse);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }
  
  .title-dark {
    font-size: clamp(1.875rem, 1.5rem + 1.875vw, 2.5rem);
    font-weight: 600;
    color: var(--color-text-dark) !important;
    margin-bottom: 1rem;
  }
  
  .subtitle-dark {
    font-size: 1.125rem;
    color: var(--color-text-dark-secondary) !important;
    line-height: 1.625;
  }
  
  .card-light {
    background-color: var(--color-surface-gray);
    border: 1px solid hsl(0 0% 90%);
    border-radius: 1rem;
    box-shadow: 0 4px 20px -5px rgba(0, 0, 0, 0.06);
    transition: all 0.2s ease;
  }
  
  .card-light:hover {
    border-color: var(--color-accent);
    /* box-shadow: var(--shadow-glow-card); */
  }
  
  .icon-container {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 0.75rem;
    background-color: var(--color-primary-light);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: background-color 0.2s;
  }
  
  .card-light:hover .icon-container {
    background-color: var( --color-primary-light);
  }
  
  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-dark) !important;
    margin-bottom: 0.75rem;
    transition: color 0.2s;
  }
  
  .card-light:hover .card-title {
    color: var(--color-accent) !important;
  }
  
  .card-description {
    color: var(--color-text-dark-secondary) !important;
    line-height: 1.625;
    margin-bottom: 1.5rem;
    flex: 1;
  }
</style>
